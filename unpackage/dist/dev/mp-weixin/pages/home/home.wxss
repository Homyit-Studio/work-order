.home-page swiper {
  height: 230px;
}
.home-page .swiper-image {
  width: 750rpx;
  height: 230px;
}
.home-page .swiper-image image {
  width: 100%;
}
.home-page .operate-options {
  display: flex;
  justify-content: flex-start;
}
.home-page .operate-options .nav-option {
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #e6e6e6;
  border-radius: 5rpx;
  margin-right: 20rpx;
}
.home-page .popup-content {
  width: 450rpx;
  padding: 40rpx;
}
.home-page .popup-content .cancel,
.home-page .popup-content .agree {
  width: 180rpx;
  height: 55rpx;
  line-height: 55rpx;
  margin: 10rpx;
}
.home-page .check-button {
  display: flex;
  justify-content: space-around;
  margin: 30rpx;
}
.home-page .check-button .cancel {
  width: 200rpx;
  height: 60rpx;
  color: #fff;
  font-size: 14px;
  line-height: 60rpx;
  background-color: #dd524d;
}
.home-page .check-button .agree {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 14px;
  color: #fff;
  background-color: #007aff;
}

