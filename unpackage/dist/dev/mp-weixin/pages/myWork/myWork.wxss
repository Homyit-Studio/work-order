.mywork-page .empty {
  padding: 40rpx;
  text-align: center;
  font-size: 12px;
  background-color: #ffffff;
}
.mywork-page .search-input {
  width: 680rpx;
  margin: 0 auto;
}
.mywork-page .tag-view {
  display: flex;
  align-items: center;
}
.mywork-page .tag-view text {
  margin-right: 10rpx;
}
.mywork-page .user-message {
  padding: 40rpx;
  display: flex;
  justify-content: space-around;
  background-color: #007aff;
  color: #fff;
}
.mywork-page .user-message .message .text {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}
.mywork-page .user-message .message .text .text-p {
  padding-left: 60rpx;
}
.mywork-page .button-body {
  display: flex;
  justify-content: flex-end !important;
}
.mywork-page .button-body .check-button {
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 12px;
  margin: 0;
  background-image: linear-gradient(90deg, #ee9ca7, #ffdde1);
}
.mywork-page .workorder-status {
  margin-top: 20rpx;
}
.mywork-page .workorder-status .title {
  margin: 20rpx 60rpx;
  display: flex;
  align-items: center;
}
.mywork-page .workorder-status .title text {
  font-size: 18px;
  margin-left: 10rpx;
}

