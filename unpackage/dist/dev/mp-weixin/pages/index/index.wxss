.index-page .image {
  width: 750rpx;
  height: 200px;
  overflow: hidden;
}
.index-page .image image {
  width: 100%;
  border-radius: 0 0 10px 10px;
}
.index-page .header-one {
  font-size: 60rpx;
  text-align: center;
  margin: 20rpx 0;
}
.index-page .card-options {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.index-page .card-options .remind-text {
  color: red;
  text-align: center;
  margin-bottom: 40rpx;
}
.index-page .card-options .card-option {
  box-sizing: border-box;
  width: 400rpx;
  padding: 32rpx;
  margin: 20rpx;
  text-align: center;
  font-size: 30rpx;
  background-color: #007aff;
  color: white;
  box-shadow: 0px 0px 1px #666;
}
.index-page .contact {
  margin-top: 120rpx;
}
.index-page .contact button {
  background-color: #fff;
  border: none;
  outline: none;
  color: red;
}
.card-click {
  box-shadow: 0px 0px 20px #666;
}

