.invest-detail-page {
  position: relative;
}
.invest-detail-page .recom-list .recom-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid gainsboro;
  padding: 10px 20px;
}
.invest-detail-page .recom-list .recom-item .title {
  font-size: 14px;
  color: #323232;
  width: 170rpx;
}
.invest-detail-page .recom-list .recom-item .cost,
.invest-detail-page .recom-list .recom-item .number {
  text-align: left;
  font-size: 12px;
  color: #9c9c9c;
}
.invest-detail-page .recom-list .recom-item .uni-icons {
  margin-left: 20rpx;
}
.invest-detail-page .nav-map {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  width: 80rpx;
  height: 80rpx;
  padding: 10rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 50%;
  font-size: 12px;
}
.invest-detail-page .empty {
  font-size: 10px;
  margin: 20rpx;
  text-align: center;
}
.invest-detail-page .table .table-title {
  display: flex;
  align-items: center;
  font-size: 16px;
  margin: 30rpx 20rpx;
}
.invest-detail-page .table .table-title text {
  margin-left: 10rpx;
}
.invest-detail-page .work-catalog {
  text-align: center;
  margin: 10rpx;
}
.invest-detail-page .img-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.invest-detail-page .check-button {
  display: flex;
  justify-content: space-around;
  margin: 30rpx;
}
.invest-detail-page .check-button .cancel {
  width: 200rpx;
  height: 60rpx;
  color: #fff;
  font-size: 14px;
  line-height: 60rpx;
  background-color: #dd524d;
}
.invest-detail-page .check-button .agree {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 14px;
  color: #fff;
  background-color: #007aff;
}
.invest-detail-page .popup-content {
  width: 450rpx;
  padding: 40rpx;
}
.invest-detail-page .popup-content .cancel,
.invest-detail-page .popup-content .agree {
  width: 180rpx;
  height: 55rpx;
  line-height: 55rpx;
  margin: 10rpx;
}
.invest-detail-page .investor-modi .button {
  background-color: #007aff;
  height: 70rpx;
  width: 400rpx;
  line-height: 70rpx;
  color: white;
  font-size: 14px;
  margin: 70rpx auto;
}

