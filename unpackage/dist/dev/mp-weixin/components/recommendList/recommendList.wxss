.recommend-list-page .notes {
  display: flex;
  margin: 20rpx 10rpx 0px 20rpx;
}
.recommend-list-page .notes text {
  margin-right: 10rpx;
}
.recommend-list-page .recom-icon-delete {
  margin: 0 5px;
  background-color: #ecf5ff;
  display: inline-block;
  height: 20px;
  padding: 0 5px;
  line-height: 20px;
  font-size: 12px;
  color: #409eff;
  border: 1px solid #d9ecff;
  border-radius: 4px;
  box-sizing: border-box;
  white-space: nowrap;
}
.recommend-list-page .recom-icon-modify {
  margin: 0 5px;
  display: inline-block;
  height: 20px;
  padding: 0 5px;
  line-height: 20px;
  font-size: 12px;
  color: #409eff;
  border: 1px solid #d9ecff;
  border-radius: 4px;
  box-sizing: border-box;
  white-space: nowrap;
  background-color: #fff;
  border-color: #f5dab1;
  color: #e6a23c;
}
.recommend-list-page .recom-list .recom-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid gainsboro;
  padding: 10px;
}
.recommend-list-page .recom-list .recom-item .title {
  font-size: 14px;
  color: #323232;
  width: -webkit-fit-content;
  width: fit-content;
}
.recommend-list-page .recom-list .recom-item .cost,
.recommend-list-page .recom-list .recom-item .number {
  text-align: left;
  font-size: 12px;
  color: #9c9c9c;
}
.recommend-list-page .recom-list .recom-item .uni-icons {
  margin-left: 20rpx;
}
.recommend-list-page .search-button {
  text-align: center;
  margin: 10px 0;
  background-color: aqua;
  border-radius: 5px;
  padding: 8rpx 10rpx;
  color: #323232;
}
.recommend-list-page .search-content {
  padding: 20px;
  border-radius: 10px;
}
.recommend-list-page .search-content .search-area {
  width: 450rpx;
  margin: 20rpx 5rpx;
  height: 320rpx;
  overflow-y: scroll;
  font-size: 14px;
  color: #8a8a8a;
}
.recommend-list-page .search-content .search-area .device-list {
  padding: 8rpx 0;
  border-bottom: 1px solid #ebebeb;
}
.recommend-list-page .search-content .search-area .empty {
  text-align: center;
  font-size: 12px;
  color: #6c6c6c;
}
.recommend-list-page .top-button {
  display: flex;
  justify-content: space-between;
}
.recommend-list-page .number-box {
  display: flex;
  align-items: center;
  margin: 20rpx;
}
.recommend-list-page .number-box text {
  margin-left: 20rpx;
}
.recommend-list-page .recom-detail {
  margin: 20rpx;
  height: 40rpx;
}
.recommend-list-page .add-button {
  background-color: #666;
  color: #fff;
  height: 60rpx;
  width: 200rpx;
  line-height: 60rpx;
  color: white;
  font-size: 14px;
  margin: 70rpx auto;
}
.recommend-list-page .button {
  background-color: #007aff;
  height: 70rpx;
  width: 400rpx;
  line-height: 70rpx;
  color: white;
  font-size: 14px;
  margin: 70rpx auto;
}

